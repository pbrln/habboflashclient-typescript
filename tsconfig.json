{
    "compilerOptions": {
        "target": "es5",
        "module": "umd",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "bin",
        "sourceMap": true,
        "lib": ["es5", "dom"],
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "swfobject": ["node_modules/swfobject/index"]
        }
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}